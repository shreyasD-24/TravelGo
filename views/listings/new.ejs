<% layout('./layouts/boilerplate') -%>
<body>
    <h1 class="offset-sm-2">Create New Listing</h1><br><br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8 offset-sm-2">
                <div class="mb-4">
                    <label for="name" class="form-label">Title</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter name of place"  name="listing[title]" required>
                    <div class="invalid-feedback">Please enter Title</div>
                    <div class="valid-feedback">Title looks good!</div>
                  </div>
                  <div class="mb-4">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" placeholder="Enter description of place" rows="4" name="listing[description]" required></textarea>
                    <div class="invalid-feedback">Description is required</div>
                    <div class="valid-feedback">Good to Go</div>
                  </div>
                  <div class="mb-4">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" class="form-control" id="image"  name="listing[image]" required>
                  </div>
                  <div class="mb-4">
                    <label class="form-label">Category</label>
                    <select class="form-select" name="listing[category]">
                      <option selected value="rooms">Rooms</option>
                      <option value="iconic cities">Iconic Cities</option>
                      <option value="mountains">Mountains</option>
                      <option value="arctic">Arctic</option>
                      <option value="castles">Castles</option>
                      <option value="amazing pools">Amazing Pools</option>
                      <option value="camping">Camping</option>
                      <option value="farms">Farms</option>
                      <option value="coastal">Coastal</option>
                      <option value="nature">Nature</option>
                    </select>
                  </div>
                  <div class="row">
                    <div class="mb-4 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input class="form-control" id="price" placeholder="Enter Price"  name="listing[price]" required>
                        <div class="invalid-feedback">Price Required</div>
                    </div>
                    <div class="mb-4 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" placeholder="Enter country"  name="listing[country]" value="India" required>
                        <div class="invalid-feedback">Country Required</div>
                    </div>
                  </div>
                  <div class="mb-4">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" placeholder="Enter location"  name="listing[location]" required>
                    <div class="invalid-feedback">Location Required</div>
                  </div>
                <button class="btn btn-dark col-sm-1 mb-5 border-0 add-btn" type="submit">Add</button>
            </div>
        
        </div>
    </form>
</body>


  