<% layout('./layouts/boilerplate') -%>
<body>
    <style>
        .filters{
            display: flex;
            flex-wrap: wrap;
        }

        .filter{
            text-align: center;
            font-size: small;
            margin-right: 2.6rem;
            opacity: 0.7;
            margin-top: 1rem;
            margin-bottom: 1rem;
        }

        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }

        .tax-price{
            display:none;
        }
    </style>
    <!-- <h3 class="mb-5">All Listings</h3> -->
    <div class="filters">
        <div class="filter trending">
            <div class="icon"><i class="fa-solid fa-fire-flame-curved"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter rooms">
            <div class="icon"><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter iconicCities">
            <div class="icon"><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter victim-category mountains">
            <div class="icon"><i class="fa-solid fa-person-hiking"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter victim-category arctic">
            <div class="icon"><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter victim-category castles">
            <div class="icon"><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter victim-category amazingPools">
            <div class="icon"><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter victim-category camping">
            <div class="icon"><i class="fa-solid fa-tents"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter victim-category farms">
            <div class="icon"><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter victim-category coastal">
            <div class="icon"><i class="fa-solid fa-water"></i></div>
            <p>Coastal</p>
        </div>
        <div class="filter victim-category nature">
            <div class="icon"><i class="fa-solid fa-tree"></i></div>
            <p>Nature</p>
        </div>
        <div class="tax-toggle p-2">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display Total after Taxes</label>
            </div>
        </div>
    </div>
    <div class="row">
        <%for(listing of listings){%>
                    <div class="col-lg-3 col-sm-6 mb-4 cards">
                        <a href="/listings/<%=listing._id  %>" style="text-decoration: none;">
                            <div class="card border border-0" style="width: 14.5rem;">
                                <img src="<%= listing.image.url %>" class="card-img-top rounded" alt="...">
                                <div class="card-img-overlay"></div>
                                <div class="card-body">
                                  <p class="card-text"><b><%= listing.title %></b><br>
                                    &#x20B9; <%= listing.price.toLocaleString("en-IN") %> / night &nbsp; 
                                    <i class="tax-price">+ 18% GST</i>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                
                <%
        }%>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/taxToggle.js"></script>
</body>



